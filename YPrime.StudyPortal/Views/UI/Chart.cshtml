@using Newtonsoft.Json
@model YPrime.eCOA.DTOLibrary.ChartDataObject

<div id="chartTooltip-@Model.Id" class="chartTooltip"></div>
@Html.Hidden("chartData-" + Model.Id, Html.Raw(JsonConvert.SerializeObject(Model)))


@if (Model.HideContainer)
{
    if (Model.ShowDisplayTitle)
    {
        <h4>@Html.Raw(Model.Title)</h4>
    }
    <div id="@Model.Id">

        <div id="chartContainer-@Model.Id" class="svg-container">
        </div>
    </div>
}
else
{
    <div class="panel panel-default chartPanel">
        <div class="panel-heading title-bar">
            @if (Model.ShowDisplayTitle)
            {
                <h4>@Html.Raw(Model.Title)</h4>
            }
            <em class="chart-expand fa fa-search clickable" onclick="showBootStrapMessage('@Model.Title', GetChartHtml('@Model.Id'))"></em>
        </div>
        <div class="panel-body">
            <div id="@Model.Id">
                <div id="chartContainer-@Model.Id" class="svg-container">
                </div>
            </div>
        </div>
    </div>
}
<script type="text/javascript" class="loadup-script">
    loadChart('@Model.Id', { minWidth: 350 });
</script>