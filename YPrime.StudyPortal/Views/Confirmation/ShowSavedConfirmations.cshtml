@model IEnumerable<YPrime.eCOA.DTOLibrary.EmailSentDto>

@{
    ViewBag.Title = "Saved Emails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <ul class="breadcrumb">
        <li>
            @Html.Partial("~/Views/UI/HomeLink.cshtml", new {})
        </li>
        <li>
            <a href="#">
                Saved Emails
            </a>
        </li>
    </ul>

    <div class="grid-wrapper">
        <h2>Saved Emails</h2>

        <div class="container-fluid">
            <div class="table-responsive">
                <table id="savedEmails" class="table table-striped table-bordered display" cellspacing="0" width="100%">
                    <thead>
                    <tr>
                        <th>Email Subject</th>
                        <th>Type</th>
                        <th>Site</th>
                        <th>Date Sent</th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th>Email Subject</th>
                        <th>Type</th>
                        <th>Site</th>
                        <th>Date Sent</th>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </div>

    </div>
</div>

<script>
    $(function() {

        $('#savedEmails').DataTable({
            ajax: {
                url: '@Url.Action("GetEmailGridData", "Confirmation")',
                dataSrc: function(data) {
                    return data;
                }
            },
            columns: [
                {
                    data: 'LinkHTML'
                },
                {
                    data: 'EmailContentType'
                },
                {
                    data: 'SiteName'
                },
                {
                    data: 'DateSent'
                }
            ]
        });
    })
</script>