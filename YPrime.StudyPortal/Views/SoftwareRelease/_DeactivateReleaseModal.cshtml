<!-- Modal -->
<div class="modal fade" id="deactivateModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Confirm Release Deactivation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">

            </div>
            <div class="modal-footer">
                <div class="col-lg-6">
                    <button id="deactivate" type="submit" class="btn btn-primary">Yes</button>
                </div>
                <div class="col-lg-6">
                    <button type="button" id="btnNo" class="btn btn-secondary" data-dismiss="modal">No</button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#deactivateModal').on('hide.bs.modal',
        function() {
            var dataId = $('#deactivateModal').data('id');
            $("input[data-releaseid=" + dataId + "]").prop('checked', true);
        });

    $('#deactivate').on('click',
        function() {
            var dataId = $('#deactivateModal').data('id');
            var request = $.ajax({
                type: "POST",
                contentType: "application/json;charset=utf-8",
                url: '@Url.Action("DeactivateSoftwareRelease", "SoftwareRelease")',
                data: JSON.stringify({ softwareReleaseId: dataId }),
                dataType: "json"
            });

            request.done(function(data) {
                location.reload();
            });
        });

</script>