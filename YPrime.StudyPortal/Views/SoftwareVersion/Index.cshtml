@using YPrime.Data.Study.Constants
@{
    ViewBag.Title = "List of Uploaded Releases";
}

<ul class="breadcrumb">
    <li> @Html.Partial("~/Views/UI/HomeLink.cshtml", new { })</li>
    <li>@Html.TranslationLabel("keySoftwareVersionMenuTitle", (string)ViewBag.SiteUserCultureCode)</li>
</ul>


<div class="grid-wrapper">
    <div class="row">
        <div class="col-sm-12">
            <h2>@Html.TranslationLabel("keySoftwareVersionMenuTitle", (string)ViewBag.SiteUserCultureCode)</h2>
        </div>
        <div class="col-sm-12">
            <div class="grid-mvc-addBtn">
                @(Html.PrimeActionLink("+ " + Html.TranslationLabel(TranslationKeyTypes.lblKeySoftwareVersionAddNewButton, (string) ViewBag.SiteUserCultureCode), "Add", "SoftwareVersion", new {}, new {@class = "btn btn-primary absolute-pos"}))
            </div>

            <div class="container-fluid">
                <div class="table-responsive">
                    <table id="softwareVersions" class="table table-striped table-bordered display" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th id="hdr-VersionNumber">Version Number</th>
                                <th id="hdr-PackagePath">Package Path</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>Version Number</th>
                                <th>Package Path</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
    $(function() {

        $('#softwareVersions').DataTable({
            ajax: {
                url: '@Url.Action("GetSoftwareVersionGridData", "SoftwareVersion")',
                dataSrc: function(data) {
                    return data;
                }
            },
            columns: [
                {
                    data: 'VersionNumber'
                },
                {
                    data: 'PackagePath'
                }
            ],
        });
    })

</script>