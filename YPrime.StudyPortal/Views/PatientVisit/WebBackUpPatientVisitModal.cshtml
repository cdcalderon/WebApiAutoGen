<div class="modal fade" id="webBackUpPatientVisitModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header"></div>
            <div class="modal-body"></div>
            <div class="modal-footer">
                <div class="btn-wrapper">
                    <button id="cancelBtn" data-dismiss="modal" class="btn btn-secondary">No</button>
                </div>
                <div class="btn-wrapper">
                    <button id="okWebBackUpBtn" data-dismiss="modal" class="btn btn-primary"></button>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $('#webBackUpPatientVisitModal #okWebBackUpBtn').on('click',
        function() {
            var hardstop = $('#webBackUpPatientVisitModal').data('hardstop');
            var Id = $('#webBackUpPatientVisitModal').data('webbackup-id');
            var jwtModel = $('#webBackUpPatientVisitModal').data('jwt-model');
            var webBackUpType = $('#webBackUpPatientVisitModal').data('webbackup-type');
            if (hardstop !== 'H') {
                if (webBackUpType === "caregiver") {
                    $('#webBackUpCaregiverModal_' + Id).data('jwt-model', jwtModel);
                    $('#webBackUpCaregiverModal_' + Id + ' #webBackUpCaregiverModal').modal({ backdrop: 'static', keyboard: false });
                } else {
                    var interval = setInterval(function() {
                            if ($('#emailBodyWrapper_' + Id).html()) {
                                $('#webBackUpEmailModal_' + Id + ' #SendWebBackUpEmailModal').modal({ backdrop: 'static', keyboard: false });
                                clearInterval(interval);
                            }
                        },
                        200);
                }
            }
        });
</script>